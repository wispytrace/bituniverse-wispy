<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    android:background="@drawable/white_stroke"
    android:layout_marginBottom="-1dp"
    android:layout_marginTop="-1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/trade_order_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:textSize="15dp"
                android:textColor="#FFF"
                android:text="创建时间"
                android:gravity="center"
                android:background="@drawable/white_stroke_small">
            </TextView>

            <TextView
                android:id="@+id/trade_order_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:textSize="20dp"
                android:text="状态"
                android:textColor="#FFEB3B"
                android:gravity="center"
                android:background="@drawable/white_stroke_small">
            </TextView>

            <Button
                android:textSize="20dp"
                android:id="@+id/trade_order_extend"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="↓"
                android:textColor="#FFF"
                android:background="@drawable/white_stroke_small">
            </Button>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/trader_order_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="卖出订单"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="#F00"
                android:background="@drawable/white_stroke_small">
            </TextView>

            <TextView
                android:id="@+id/trade_sell_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2020/07/29 21:36"
                android:textSize="15dp"
                android:gravity="center"
                android:background="@drawable/white_stroke_small">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="价格"
                android:gravity="center"
                android:background="@drawable/white_stroke_small">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="卖出手续费"
                android:gravity="center"
                android:background="@drawable/white_stroke_small">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="成交额"
                android:gravity="center"
                android:background="@drawable/white_stroke_small">
            </TextView>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/trade_sell_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="22059.18"
                android:gravity="center"
                android:background="@drawable/white_stroke_small">
            </TextView>

            <TextView
                android:id="@+id/trade_sell_transfee"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:gravity="center"
                android:background="@drawable/white_stroke_small">
            </TextView>

            <TextView
                android:id="@+id/trade_sell_amount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="22.95918"
                android:gravity="center"
                android:background="@drawable/white_stroke_small">
            </TextView>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="买入订单"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:textColor="#30FF02"
                    android:background="@drawable/white_stroke_small">
                </TextView>

                <TextView
                    android:id="@+id/trade_buy_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="2020/07/29 21:36"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:background="@drawable/white_stroke_small">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="价格"
                    android:gravity="center"
                    android:background="@drawable/white_stroke_small">
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="买入手续费"
                    android:gravity="center"
                    android:background="@drawable/white_stroke_small">
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="成交额"
                    android:gravity="center"
                    android:background="@drawable/white_stroke_small">
                </TextView>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/trade_buy_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="22059.18"
                    android:gravity="center"
                    android:background="@drawable/white_stroke_small">
                </TextView>

                <TextView
                    android:id="@+id/trade_buy_transfee"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="0"
                    android:gravity="center"
                    android:background="@drawable/white_stroke_small">
                </TextView>

                <TextView
                    android:id="@+id/trade_buy_amount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="22.95918"
                    android:gravity="center"
                    android:background="@drawable/white_stroke_small">
                </TextView>
            </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>
